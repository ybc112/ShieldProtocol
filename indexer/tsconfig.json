{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/generated": [".ponder/generated/index.ts"]
    }
  },
  "include": ["src/**/*", "ponder.config.ts", "ponder.schema.ts", "abis/**/*"],
  "exclude": ["node_modules", "dist", ".ponder"]
}
